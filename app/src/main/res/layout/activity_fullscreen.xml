<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.TrovaLaSonda.ActionBar.Fullscreen"
    tools:context=".FullscreenActivity">

    <org.osmdroid.views.MapView android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/buzzer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_buzzer_on"/>

                <eo.view.batterymeter.BatteryMeterView
                    android:id="@+id/battery_meter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:batteryMeterColor="#FFFF00"
                    app:batteryMeterCriticalChargeLevel="15"
                    app:batteryMeterCriticalColor="#FF2020"
                    app:batteryMeterIndicatorColor="#000000"
                    app:batteryMeterIsCharging="false"
                    app:batteryMeterTheme="rounded"
                    app:batteryMeterUnknownColor="#FFFF00" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="@color/yellow"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:text="-"/>

                    <TextView
                        android:id="@+id/unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/yellow"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="km"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/bk"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:background="#80000000"
                    android:gravity="center"
                    android:visibility="gone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sonde"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#7FFF7F"
                    android:gravity="center"
                    android:text="[no sonde]"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/yellow"
                    android:text="RS41 403.000MHz"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/height"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/yellow"
                            android:text="H: -m ="/>
                        <TextView
                            android:id="@+id/horizontal_speed"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/yellow"
                            android:text="V: -m/s"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="40sp"
                        android:textColor="#FFFF00"/>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#80000000">

            <ProgressBar
                android:id="@+id/rssi"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/dbm"
                android:indeterminate="false"
                android:max="400"
                android:minHeight="30dp"
                android:progress="20"
                android:scaleY="4" />

            <TextView
                android:id="@+id/dbm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textSize="18dp"
                android:text="-dBm"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:background="#40000000"
        android:animateLayoutChanges="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/menu_open"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu"/>

        <ImageView
            android:id="@+id/menu_center"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_compass"/>

        <ImageView
            android:id="@+id/menu_layer"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_layer"/>

        <ImageView
            android:id="@+id/menu_maps"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_maps"/>

        <ImageView
            android:id="@+id/menu_settings"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_preferences"/>
    </LinearLayout>
    <TextView
        android:id="@+id/coords"
        android:background="#40000000"
        android:clickable="true"
        android:textSize="25dp"
        android:visibility="gone"
        android:textStyle="bold"
        android:layout_gravity="right|top"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</FrameLayout>