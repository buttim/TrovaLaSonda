<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ThemeOverlay.TrovaLaSonda.ActionBar.Fullscreen"
    tools:context=".FullscreenActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="@string/map">
    </org.osmdroid.views.MapView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="invisible"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/panel"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:background="#80000000"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/buzzer"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_buzzer_on"
            android:contentDescription="@string/toggle_buzzer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <eu.ydiaeresis.trovalasonda.BatteryIndicator
            android:id="@+id/battery_meter"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:contentDescription="@string/battery_level"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buzzer"
            app:layout_constraintBottom_toTopOf="@+id/rssi"/>

        <TextView
            android:id="@+id/id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_sonde"
            android:textColor="#7FFF7F"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/buzzer"
            app:layout_constraintEnd_toStartOf="@id/subpanel"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="\??"
            android:textColor="@color/yellow"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/bk"
            app:layout_constraintEnd_toStartOf="@id/unit"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/buzzer"
            app:layout_constraintTop_toBottomOf="@+id/id"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:autoSizeTextType="uniform"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:text="@string/km"
            android:textColor="@color/yellow"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/rssi"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/subpanel"
            app:layout_constraintHorizontal_weight=".4"
            app:layout_constraintStart_toEndOf="@id/distance"
            app:layout_constraintTop_toBottomOf="@id/id" />

        <TextView
            android:id="@+id/bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#80000000"
            android:gravity="center"
            android:text="BK 8:30:00"
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/rssi"
            app:layout_constraintEnd_toStartOf="@id/subpanel"
            app:layout_constraintStart_toEndOf="@+id/battery_meter"
            app:layout_constraintTop_toBottomOf="@id/distance"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/subpanel"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="100"
            app:layout_constraintStart_toEndOf="@+id/id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/rssi">

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="RS41 ???.???MHz"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text='â–²'
                android:textColor="#FFFF00"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/height"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:text="H: -m"
                android:textColor="@color/yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/horizontal_speed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type"
                app:layout_constraintVertical_weight="1"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/horizontal_speed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="V: -km/h"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/vertical_speed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/height"
                app:layout_constraintVertical_weight=".7"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/vertical_speed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:text="Vs: -m/s"
                android:textColor="@color/yellow"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/direction"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/horizontal_speed"
                app:layout_constraintVertical_weight=".7"
                tools:ignore="HardcodedText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/rssi"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/dbm"
            android:background="@drawable/s_meter"
            android:indeterminate="false"
            android:max="157"
            android:minHeight="30dp"
            android:paddingStart="3dp"
            android:paddingTop="5dp"
            android:paddingBottom="3dp"
            android:progressDrawable="@drawable/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dbm"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/dbm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/dbm"
            android:textColor="#DDD"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:orientation="vertical"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:animateLayoutChanges="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/menu_open"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="@string/menu" />

        <ImageView
            android:id="@+id/menu_center"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_compass"
            android:contentDescription="@string/center_user_in_map" />

        <ImageView
            android:id="@+id/menu_center_sonde"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_pin"
            android:contentDescription="@string/center_sonde_in_map" />

        <ImageView
            android:id="@+id/menu_layer"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_layer"
            android:contentDescription="@string/change_map_layer" />

        <ImageView
            android:id="@+id/menu_maps"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_car"
            android:contentDescription="@string/launch_navigation" />

        <ImageView
            android:id="@+id/menu_settings"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="@string/settings" />
        <ImageView
            android:id="@+id/menu_help"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_question_mark"
            android:contentDescription="@string/help" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coords"
        android:background="#80000000"
        android:layout_marginTop="20dp"
        android:layout_gravity="end|top"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="end|top"
            />
        <TextView
            android:id="@+id/lon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="end|top"
            />
    </LinearLayout>
</FrameLayout>